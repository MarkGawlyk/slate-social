<style>
    @keyframes blur-enter {
        0% { filter: blur(20px); opacity: 0; transform: translateY(20px); }
        100% { filter: blur(0); opacity: 1; transform: translateY(0); }
    }
    .blur-enter.is-visible {
        animation: blur-enter 1.5s cubic-bezier(0.2, 0.8, 0.2, 1) forwards;
    }
    
    .fade-in-up {
        opacity: 0;
        transform: translateY(20px);
        transition: opacity 0.8s ease-out, transform 0.8s ease-out;
    }
    .fade-in-up.delay-1000 { transition-delay: 1.0s; }
    .fade-in-up.delay-1500 { transition-delay: 1.5s; }

    .fade-in-up.is-visible {
        opacity: 1;
        transform: translateY(0);
    }
</style>

<script>
    const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
            if (entry.isIntersecting) {
                entry.target.classList.add('is-visible');
                observer.unobserve(entry.target);
            }
        });
    }, { threshold: 0.3 });

    document.querySelectorAll('.blur-enter, .fade-in-up').forEach(el => observer.observe(el));
</script>
