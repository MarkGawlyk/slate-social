---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const recentPosts = (await getCollection('blog'))
  .filter((post) => post.data.pubDate <= new Date())
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="py-24 border-t border-zinc-200 dark:border-zinc-800 fade-in">
  <div class="container px-4 md:px-6 max-w-5xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4">
      <div>
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl">Latest from the Blog</h2>
        <p class="mt-4 text-zinc-500 dark:text-zinc-400">Insights into gym management and community building.</p>
      </div>
      <a href="/blog" class="text-sm font-bold border-b-2 border-zinc-900 dark:border-zinc-100 hover:opacity-70 transition-opacity">View All Posts</a>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {recentPosts.map((post) => (
        <a href={`/blog/${post.slug}`} class="group block space-y-3">
          <div class="aspect-video bg-zinc-100 dark:bg-zinc-900 rounded-lg flex items-center justify-center border border-zinc-200 dark:border-zinc-800 overflow-hidden relative">
             {post.data.heroImage ? (
               <Image 
                 src={post.data.heroImage} 
                 alt={post.data.title} 
                 width={600}
                 height={338}
                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
               />
             ) : (
                <div class="w-full h-full bg-[radial-gradient(ellipse_at_center,_var(--tw-gradient-stops))] from-zinc-200 via-zinc-100 to-zinc-50 dark:from-zinc-800 dark:via-zinc-900 dark:to-black opacity-50 group-hover:scale-105 transition-transform duration-500"></div>
             )}
          </div>
          <div class="space-y-2">
            <div class="text-xs font-mono text-zinc-500">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </div>
            <h3 class="text-lg font-bold leading-tight group-hover:underline underline-offset-4 decoration-2">
              {post.data.title}
            </h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
