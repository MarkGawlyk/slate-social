---
import { getCollection } from 'astro:content';
import { Image } from 'astro:assets';

const recentPosts = (await getCollection('blog'))
  .filter((post) => post.data.pubDate <= new Date())
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<section class="py-24 border-t border-zinc-200 dark:border-zinc-800 bg-white dark:bg-black">
  <div class="container px-4 md:px-6 max-w-5xl mx-auto">
    <div class="flex flex-col md:flex-row justify-between items-end mb-12 gap-4 fade-in">
      <div>
        <p class="text-sm font-mono uppercase tracking-wider text-purple-600 dark:text-purple-400 mb-2">From Our Blog</p>
        <h2 class="text-3xl font-bold tracking-tighter sm:text-4xl">Latest Insights</h2>
        <p class="mt-4 text-zinc-500 dark:text-zinc-400">Insights into gym management and community building.</p>
      </div>
      <a href="/blog" class="group inline-flex items-center gap-2 text-sm font-bold text-purple-600 dark:text-purple-400 hover:text-purple-700 dark:hover:text-purple-300 transition-colors">
        View All Posts
        <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </div>

    <div class="grid gap-8 md:grid-cols-3">
      {recentPosts.map((post, index) => (
        <a href={`/blog/${post.slug}`} class="group block space-y-4 fade-in" style={`animation-delay: ${index * 0.15}s`}>
          <div class="aspect-video bg-zinc-100 dark:bg-zinc-900 rounded-xl flex items-center justify-center border border-zinc-200 dark:border-zinc-800 overflow-hidden relative group-hover:border-purple-500/30 dark:group-hover:border-purple-400/30 transition-all duration-300 group-hover:shadow-lg group-hover:shadow-purple-500/5">
             {post.data.heroImage ? (
               <Image 
                 src={post.data.heroImage} 
                 alt={post.data.title} 
                 width={600}
                 height={338}
                 class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500" 
               />
             ) : (
                <div class="w-full h-full bg-gradient-to-br from-purple-100 via-zinc-100 to-cyan-100 dark:from-purple-900/50 dark:via-zinc-900 dark:to-cyan-900/50 group-hover:scale-105 transition-transform duration-500"></div>
             )}
             <!-- Overlay gradient on hover -->
             <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="space-y-2">
            <div class="text-xs font-mono text-purple-600 dark:text-purple-400">
              <time datetime={post.data.pubDate.toISOString()}>
                {post.data.pubDate.toLocaleDateString('en-us', {
                  year: 'numeric',
                  month: 'short',
                  day: 'numeric',
                })}
              </time>
            </div>
            <h3 class="text-lg font-bold leading-tight group-hover:text-purple-600 dark:group-hover:text-purple-400 transition-colors">
              {post.data.title}
            </h3>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
