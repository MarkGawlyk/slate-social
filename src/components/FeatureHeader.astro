---
interface Feature {
  title: string;
  description: string;
}

interface Props {
  title: string;
  description: string;
  featuresTitle: string;
  features: Feature[];
  icon: string;
}

const { title, description, featuresTitle, features, icon } = Astro.props;
---

<div class="mb-12">
    <a href="/#features" class="text-sm text-zinc-500 hover:text-black dark:text-zinc-400 dark:hover:text-white mb-8 inline-block transition-colors">← Back to Features</a>
    <h1 class="text-4xl font-black tracking-tighter sm:text-6xl mb-6">{title}</h1>
    <p class="text-xl text-zinc-600 dark:text-zinc-400 leading-relaxed">
        {description}
    </p>
</div>

<div class="grid md:grid-cols-2 gap-12 mb-20">
    <div class="space-y-6">
        <h3 class="text-2xl font-bold">{featuresTitle}</h3>
        <ul class="space-y-4">
            {features.map((feature) => (
                <li class="flex items-start gap-3">
                    <span class="text-green-500 mt-1">✓</span>
                    <div>
                        <strong class="block text-zinc-900 dark:text-zinc-100">{feature.title}</strong>
                        <p class="text-sm text-zinc-500 dark:text-zinc-400">{feature.description}</p>
                    </div>
                </li>
            ))}
        </ul>
    </div>
    <div class="bg-zinc-100 dark:bg-zinc-900 h-64 md:h-auto rounded-2xl flex items-center justify-center text-zinc-300 dark:text-zinc-700">
            <span class="text-6xl">{icon}</span>
    </div>
</div>
