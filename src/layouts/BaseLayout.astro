---
const { title = 'Slate Social', description = 'Slate Social helps climbing gyms run their community with events, chat, media, and analytics.' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>{title}</title>
		<meta name="description" content={description} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap"
			rel="stylesheet"
		/>
		<style>
			:root {
				--bg: #ffffff;
				--bg-alt: #f9fafb;
				--panel: #ffffff;
				--border: #e4e4e7;
				--muted: #71717a;
				--text: #0a0a0a;
				--accent: #0f172a;
				--accent-rgb: 15, 23, 42;
				--accent-contrast: #ffffff;
				--success: #065f46;
				--error: #b91c1c;
				--shadow: 0 10px 50px rgba(17, 24, 39, 0.12);
				--radius-sm: 8px;
				--radius-lg: 16px;
				--max-width: 1200px;
			}

			*,
			*::before,
			*::after {
				box-sizing: border-box;
			}

			body {
				font-family: 'Inter', system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
				margin: 0;
				background: radial-gradient(circle at 20% 20%, #eef2ff 0, transparent 25%),
					radial-gradient(circle at 80% 0%, #ecfeff 0, transparent 20%),
					var(--bg);
				color: var(--text);
				min-height: 100vh;
				overflow-x: hidden;
			}

			a {
				color: inherit;
				text-decoration: none;
			}

			main {
				display: flex;
				flex-direction: column;
				gap: 6rem;
				padding: 4rem 1.5rem 5rem;
			}

			.container {
				max-width: var(--max-width);
				margin: 0 auto;
				width: 100%;
			}

			@media (max-width: 768px) {
				main {
					padding: 3rem 1.25rem 4rem;
					gap: 4rem;
				}
			}
		</style>
	</head>
	<body>
		<slot />
	</body>
</html>
